<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:showDividers="middle"
    android:orientation="vertical"
    android:divider="?android:attr/listDivider"
    tools:context=".MainActivity">


    <practice.compoundviewexample.ColorOptionsView
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:background="?android:selectableItemBackground"
        android:onClick="onClickFunction"
        custom:titleText="Background"
        custom:colorValue="@android:color/holo_blue_bright"
        />


    <practice.compoundviewexample.ColorOptionsView
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:background="?android:selectableItemBackground"
        android:onClick="onClickFunction"
        custom:titleText="Foreground"
        custom:colorValue="@android:color/holo_orange_dark"
        />


</LinearLayout>
